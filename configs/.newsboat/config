#general settings
auto-reload yes
max-items 30

#external browser
browser "/usr/bin/w3m %u"
macro m set browser "/usr/bin/mpv %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
macro f set browser "/usr/bin/librewolf %u"; open-in-browser ; set browser "/usr/bin/w3m %u"

#unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
